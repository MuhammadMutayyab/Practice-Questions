//Facorial Function
function factorial(num) {
  if (num === 0 || num === 1)
    return 1;
  for (var i = num - 1; i >= 1; i--) {
    num = num * i;
  }
  return num;
}
answer = factorial(5);
console.log(answer)

// Recursive Way

const Factorial = (num) => {
    if (num === 0){
        return 1;
    }else {
       return (num * Factorial(num-1))
    }
    return num;
}

console.log(Factorial(5))
